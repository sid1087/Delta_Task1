<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/startpagebg"
    tools:context=".startPage">


    <TextView
        android:id="@+id/textView4"
        android:layout_width="400dp"
        android:layout_height="100dp"
        android:layout_marginTop="152dp"
        android:text="CHOOSE WISELY"
        android:textSize="50dp"
        android:fontFamily="@font/lobster"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonc2"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginBottom="150dp"
        android:background="@drawable/startpgbutton"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="SPEED RUN"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonc1"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginBottom="300dp"
        android:background="@drawable/startpgbutton"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="NORMAL MODE"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/settingsBtn"
        android:layout_width="60dp"
        android:layout_height="62dp"
        android:background="@drawable/ic_settings_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>